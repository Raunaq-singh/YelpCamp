<%include ../partials/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info1</li>
                <li class="list-group-item">Info2</li>
                <li class="list-group-item">Info3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=info.image%>">
                <div class="caption-full">
                    <h4 class="pull-right">9.00$/hr</h4>
                    <h4><a><%=info.name%></a></h4>
                    <p>
                    Description of the camp is as follows :- <%=info.description%>
                    </p>
                    <p>
                        <em>Submitted by <%=info.author.username%></em>
                    </p>
                    <% if(currentUser && info.author.id.equals(currentUser._id))%>
                    <a class="btn btn-warning" href="/campgrounds/<%=info._id%>/edit">Edit Form!</a>
                    <form id="delete-form" action="/campgrounds/<%=info._id%>?_method=DELETE" method="POST">
                        <submit class="btn btn-danger">Delete!</submit>
                    </form>
                    <%}%>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%=info._id%>/comments/new">Add a new comment</a>                 
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <% info.comments.forEach(function(comment){ %>
                        <strong><%=comment.author.username%></strong>
                        <span class="pull-right">10 days ago</span>
                        <p>
                            <%=comment.text%>
                        </p>
                        <% if(currentUser && info.author.id.equals(currentUser._id))%>
                        <a class="btn btn-xs btn-warning" href="/campgrounds/<%=info._id%>/comments/<%=comment._id%>/edit">Edit!</a>
                        <form action="/campgrounds/<%=info._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
                            <input type="submit" class="btn btn-xs btn-danger" value="Delete!">
                        </form>
                        <% }) %>                
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer%>